@page
@model WebApplication1.Pages.LoginModel
@{

}

<div class="container border" style=" padding: 20px">
    <form method="post">
        <div class="form group row">
            <div class=" form group col 2">
                <label asp-for="Credentials.username"></label>
            </div>
            <div class=" form group col 5">
                <input type="text" asp-for="Credentials.username" class="form-control">
            </div>
            <div class=" form group col 2">
                <label asp-for="Credentials.password"></label>
            </div>
            <div class=" form group col 5">
                <input type="text" asp-for="Credentials.password" class="form-control">
            </div>
            <div class="form group col 5">
                <input type="checkbox" asp-for="Credentials.isPersistent" />
                <label asp-for="Credentials.isPersistent"></label>
            </div>

        </div>
        <div>
            <button type="submit" class="btn btn-danger" value="Login"></button>
        </div>
    </form>
</div>